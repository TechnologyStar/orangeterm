{
  "mcpServers": {
    "filesystem": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem", "/path/to/allowed/directory"],
      "env": {}
    },
    "git": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-git"],
      "env": {}
    },
    "sqlite": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-sqlite", "--db-path", "/path/to/database.db"],
      "env": {}
    }
  },
  "ai": {
    "provider": "openai",
    "model": "gpt-4",
    "apiKey": "your-api-key-here",
    "maxTokens": 2000,
    "temperature": 0.7
  },
  "security": {
    "defaultAuthorizationMode": "manual_highrisk",
    "enableVirtualCredentials": true,
    "logCommands": true
  },
  "knowledgeBase": {
    "enableOnlineSearch": true,
    "searchProvider": "duckduckgo",
    "cacheResults": true
  }
}
